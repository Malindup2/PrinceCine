<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PrinceCine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.PrinceCine" parent="Base.Theme.PrinceCine" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.PrinceCine.Splash" parent="Theme.PrinceCine">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Custom Text Input Style for Black Text -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="hintTextColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    
    <!-- Custom Text Input Edit Text Style -->
    <style name="CustomTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>